{
    "name": "hamzaabaila/ecom-activitylog",
    "description": "Enhanced activity logging for e-commerce applications with Filament v4 timeline components",
    "keywords": ["laravel", "filament", "activity-log", "e-commerce", "timeline", "audit", "tracking"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Hamza Aabila",
            "email": "hamza@example.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "filament/filament": "^4.0",
        "spatie/laravel-activitylog": "^4.10"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "HamzaAabila\\EcomActivitylog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HamzaAabila\\EcomActivitylog\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "HamzaAabila\\EcomActivitylog\\EcomActivitylogServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}